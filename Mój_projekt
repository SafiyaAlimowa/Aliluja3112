            print("Teraz Thanos dokonuje wyboru...")
            comp = random.randint(1, 3)
            if comp == 1:
                comp = "kamień"
            elif comp == 2:
                    comp == "nożyce"
            else:
                comp = "papier"
                time.sleep(1)
                print("Wybór został dokonany.")
                time.sleep (1)
                print("Gra się rozpoczyna!")
                time.sleep(1)
                print ("1 - kamień...")
                time.sleep(1)
                print("2 - nożyce...")
